{
  "expo": {
    "name": "Locall",
    "slug": "local_app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.local-app",
      "infoPlist": {
        "CFBundleDisplayName": "Locall",
        "NSPhotoLibraryUsageDescription": "Allow access to your photo library to update your profile picture."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.anonymous.localapp"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "locall",
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsImpl": "mapbox",
          "RNMapboxMapsDownloadToken": "sk.eyJ1IjoiYWlzbWFtZCIsImEiOiJjbWo1MGR6cGIwczhpM2ZvZ2o0Mmc5c3d5In0.kTIbp9rweVCN_SFCjuiE3w"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow [Local] to find events near you."
        }
      ],
      "expo-web-browser"
    ]
  }
}